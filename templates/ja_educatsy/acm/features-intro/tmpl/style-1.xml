<?xml version="1.0" encoding="utf-8"?>
<form>
    <title>Features Intro Style 1</title>
	<sampledata></sampledata>
	<fields name="features-intro">
		<fieldset name="basic" label="FEATURES_BASIC_LABEL" description="FEATURES_BASIC_DESC">
			<field name="position" type="moduleposition"    
        description="FEATURES_POSITION_DESC"
        label="FEATURES_POSITION_LABEL"
        default=""
        maxlength="50" />

			<field name="img-features" type="media" default="" label="FEATURES_BACKGROUND_LABEL" description="FEATURES_BACKGROUND_DESC" required="1"></field>
		</fieldset>

		<fieldset name="section-features" label="FEATURES_SECTION_LABEL" description="FEATURES_SECTION_DESC">
			<field name="data" type="jalist" >
				<item name="ft-title" type="text" default="" size="40" label="FEATURES_TITLE_LABEL" description="FEATURES_TITLE_DESC" required="1"/>
			</field>

		</fieldset>
  </fields>
</form>